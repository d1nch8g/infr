    }

    .main-page-welcome-text {
        text-align: center;
        font-size: 55px;
        margin-bottom: 0px;
        font-family: "Sofia Sans", sans-serif;
    }

    .main-page-welcome-text-two {
        color: rgb(167, 167, 167);
        text-align: center;
        font-size: 28px;
        margin-bottom: 60px;
        font-family: "Sofia Sans", sans-serif;
    }

    .main-page-preview-arrow {
        position: relative;
        width: 100px;
        height: 100px;
        margin: 30px auto 80px auto;
    }

    .main-page-preview-arrow:before,
    .main-page-preview-arrow:after {
        content: '';
        position: absolute;
        box-sizing: border-box;
        width: 100%;
        height: 100%;
        border-left: 26px solid #40AAFF;
        border-bottom: 26px solid #40AAFF;
        animation: main-page-preview-arrow 3s linear infinite;
    }

    .main-page-preview-arrow:after {
        animation: main-page-preview-arrow 3s linear infinite -1.5s;
    }

    @keyframes main-page-preview-arrow {
        0% {
            opacity: 0;
            transform: translate(0, -53px) rotate(-45deg);
        }

        10%,
        90% {
            opacity: 0;
        }

        50% {
            opacity: 1;
            transform: translate(0, 0) rotate(-45deg);
        }

        100% {
            opacity: 0;
            transform: translate(0, 53px) rotate(-45deg);
        }
    }

    .main-page-preview-separator {
        border: 0;
        height: 1px;
        background-image: -webkit-linear-gradient(left, #40AAFF, #1d1f23, #40AAFF);
        position: relative;
        top: 10px;
        animation: main-page-sep-line 5s 0s infinite linear;
    }

    .elem-hidden {
        filter: blur(5px);
        transform: translateX(-10%);
        opacity: 0;
        transition: all 1s;
    }

    .elem-show {
        opacity: 1;
        transform: translateX(0);
        filter: blur(0);
    }

